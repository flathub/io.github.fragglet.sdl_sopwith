{
    "app-id": "io.github.fragglet.sdl_sopwith",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "sopwith",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "rename-desktop-file": "sopwith.desktop",
    "rename-icon": "sopwith",
    "modules": [
        {
            "name": "sdl-sopwith",
            "post-install": [
                "install -D -t /app/share/maps maps/*"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/fragglet/sdl-sopwith/releases/latest",
                        "version-query": ".tag_name | sub(\"^sdl-sopwith-\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"sdl-sopwith-\" + $version + \".tar.gz\") | .browser_download_url",
                        "timestamp-query": ".published_at"
                    },
                    "type": "archive",
                    "url": "https://github.com/fragglet/sdl-sopwith/releases/download/sdl-sopwith-2.6.0/sdl-sopwith-2.6.0.tar.gz",
                    "sha256": "c6e4482457d2e0a45d406253c8f2878b92f9f20a6ec45e70ef15de8a7ad865f2"
                }
            ]
        }
    ]
}
